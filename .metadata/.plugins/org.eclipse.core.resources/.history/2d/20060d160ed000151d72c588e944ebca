import java.util.ArrayList;

public class BikeStore {

	public static ArrayList<bike> everyBikes = new ArrayList <bike>();

	public String geteveryBike() {
		String everyMyBikes = "";
		
		for(bike k : everyBikes) {
			
			everyMyBikes = everyMyBikes + "The bike is the color " + k.getColor () + " and the size is " + k.getSize () + " and costs " + k.getPrice() + "kr" + "\n";
		
		}
	return everyMyBikes;
	
	}
	
	public void addBike(String color, int size, int price) {
		bike k= new bike (color, size, price);
		this.everyBikes.add(k);
	}
	
}
