
public class Bike {
	private  String color;
	private  int price;
	private  int size;

	// Constructors
	public Bike(String color, int size) {
		this.color = color;
		this.size = size;
	}
//Declares bikes color, size and price. 
	public Bike(String color, int size, int price) {

		for (int i = 0; i < 10; i++) {
			if (0 == color.compareTo(constants.BikeColors[i].toString())) {
				this.color = color;
				break;
			}else{
				this.color = "ERROR";
			
			}
		}
		if (size >= 8 && size <= constants.MAX_SIZE) {
			this.size = size;
			
		}else{
			this.size= 404;
			
			
		}
		if (price >= 0 && price <= constants.MAX_PRICE) {
			this.price = price;
		}else{
			this.price= 404;
		}
	}

	// Methods
	public  String getColor() {
		return color;
	}

	public int getPrice() {
		return price;
	}

	public int getSize() {
		return size;
	}



}