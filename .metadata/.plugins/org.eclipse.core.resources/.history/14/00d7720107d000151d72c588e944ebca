
public class bike {

	private String color;
	private int price;
	private int size;

	//Constructors


	public bike(String color, int size){
		this.color = color;
		this.size = size;


		}

	public Bike (String color, int size){
		this.color = color;
	}
	public Bike (String color, int size, int price) {
	
	}
		

	//methods 

	public String getColor () {
		return this.color; 
	}

	public int getSize () {
		return this.size;
	}
	
	public int getPrice () {
		return this.price;
	}
	
	public void setPrice (int price) {
		if (price >=0 && price <= MAX_PRICE) {
			this.price = price; 
		}
	}
}


